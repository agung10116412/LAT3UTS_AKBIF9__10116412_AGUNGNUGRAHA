<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    android:orientation="vertical"
    android:layout_marginBottom="50dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="1dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="26dp"
                    app:civ_border_color="#38b5f2"/>

                <TextView
                    android:id="@+id/TxtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agung Nugraha"
                    android:layout_toRightOf="@+id/profile_image"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:textSize="14dp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/gradient2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:gravity="center_horizontal"
                            android:text="About Me"
                            android:textColor="#333232"
                            android:textSize="13.7sp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:paddingTop="25dp"
                            android:id="@+id/TxtView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12.3dp"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="Perkenalkan nama saya Agung Nugraha. Saya lahir di Cianjur, 02 Maret 1997, Saya anak pertama dari 2 bersaudara, adik saya sekarang duduk di bangku kelas 2 Sekolah Menengah Atas, Saya Sendiri Sekarang Sedang menempuh pendidikan tinggi di Universitas Komputer Indonesia jurusan teknik Informatika semester 6."/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:gravity="center_horizontal"
                            android:text="@string/contact"
                            android:textColor="#333232"
                            android:textSize="13.7sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/imgPhone"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_marginTop="20.3dp"
                                android:background="@drawable/ic_whatsapp" />

                            <TextView
                                android:id="@+id/txtPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+6281320973126"
                                android:layout_marginTop="20.3dp"
                                android:layout_marginLeft="10.3dp"
                                android:layout_toRightOf="@+id/imgPhone" />

                            <TextView
                                android:id="@+id/imgLine"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/imgline"
                                android:layout_below="@id/imgPhone"/>

                            <TextView
                                android:id="@+id/txtline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="agungnugrahatpv"
                                android:layout_marginTop="12.3dp"
                                android:layout_marginLeft="10.3dp"
                                android:layout_toRightOf="@+id/imgLine"
                                android:layout_below="@id/imgPhone"/>

                            <TextView
                                android:id="@+id/imgInstagram"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/ic_instagram"
                                android:layout_below="@id/imgLine"/>

                            <TextView
                                android:id="@+id/txtInstagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="aingdidie"
                                android:layout_marginTop="12.3dp"
                                android:layout_marginLeft="10.3dp"
                                android:layout_toRightOf="@+id/imgInstagram"
                                android:layout_below="@id/imgLine"/>

                            <TextView
                                android:id="@+id/imgEmail"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/ic_gmail"
                                android:layout_below="@id/imgInstagram"/>

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="agungn351@email.unikom.ac.id"
                                android:layout_marginTop="12.3dp"
                                android:layout_marginLeft="10.3dp"
                                android:layout_toRightOf="@+id/imgEmail"
                                android:layout_below="@id/imgInstagram"/>









                        </RelativeLayout>

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"

                            android:layout_marginTop="10dp"
                            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

                        <FrameLayout
                            android:layout_width="50.7dp"
                            android:layout_height="50.3dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35.8dp"
                            android:background="@drawable/white_hexagone">

                            <ImageView
                                android:id="@+id/kalibrasi"
                                android:layout_width="30.7dp"
                                android:layout_height="30.3dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_my_location_24px"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="90dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginTop="20.3dp"
                android:layout_marginBottom="16.7dp"
                android:background="@drawable/half_blue_roundshape"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>